/* components/my-tab-control/my-tab-control.wxss */
.tab-control {
  display: flex;
  height: 80rpx;
  background-color: #fff;
}

.tab-control .tab-item {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
}

.tab-control .tab-item text {
  color: #333;
  padding: 0 10rpx 6rpx 10rpx;
}

.tab-control .tab-item.active text{
  color: #ff5777;
  border-bottom: 6rpx solid #ff5777;
}

/* pages/goodsDetail/goodsDetail.wxss */
page {
  color: #555;
  padding-bottom: 100rpx;
}

.swiper-box {
  height: 450rpx;
}

.swiper-box .swiper-item image {
  width: 100%;
}

.goods-info {
  padding: 20rpx 10rpx;
  border-bottom: 10rpx solid #eee;
}

.price-box {
  margin-top: 20rpx;
}

.price-box .now-price {
  font-size: 44rpx;
  color: #ff5777;
  margin: 0 10rpx;
}

.price-box .old-price {
  text-decoration: line-through;
  margin: 0 10rpx;
}

.price-box .tag {
  font-size: 24rpx;
  color: #fff;
  padding: 0 4rpx;
  background-color: #ff5777;
  border-radius: 6px;
  margin: 0 10rpx;
}

.coll {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}

.services {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0 30rpx 0;
}

.services .services-item image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}

.services .services-item text {
  font-size: 24rpx;
  vertical-align: middle;
}

.shop-box {
  padding: 10rpx 20rpx 80rpx;
  border-bottom: 10rpx solid #eee;
}

.shop-box .name {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.shop-box .name .image-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
  overflow: hidden;
  margin-right: 16rpx;
}

.shop-box .name .image-box image {
  width: 100%;
  height: 100%;
}

.shop-box .name text {
  font-size: 36rpx;
}

.shop-box .info {
  display: flex;
}

.shop-box .info .info-left {
  flex: 1;
  display: flex;
  align-items: center;
  border-right: 1px solid #ccc;
}

.shop-box .info .info-left .info-left-item {
  flex: 1;
  text-align: center;
}

.shop-box .info .info-left .info-left-item .total-count,.all-product {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.shop-box .info .info-left .info-left-item .text {
  font-size: 24rpx;
}

.shop-box .info .info-right {
  flex: 1;
  text-align: center;
}

.shop-box .info .info-right .info-r-row {
  font-size: 24rpx;
  display: flex;
}

.shop-box .info .info-right .info-r-row view:first-child {
  flex: 2;
}

.shop-box .info .info-right .info-r-row view {
  flex: 1;
}

.shop-box .info .info-right .info-r-row .more {
  color: red;
}

.shop-box .info .info-right .info-r-row .less {
  color: green;
}

.shop-box .info .info-right .info-r-row:nth-child(2) {
  margin: 10rpx 0;
}

.shop-box .go-shop-box {
  text-align: center;
  margin-top: 60rpx;
}

.shop-box .go-shop {
  display: inline-block;
  padding: 20rpx 100rpx;
  background-color: #eee;
  border-radius: 3px;
}

.text-desc {
  padding: 30rpx 20rpx;
  line-height: 50rpx;
}

.image-desc {
  border-bottom: 10rpx solid #eee;
}

.image-desc image {
  width: 100%;
}

.goods-params {
  font-size: 32rpx;
  padding: 40rpx 20rpx;
  border-bottom: 10rpx solid #eee;
}

.goods-params .size-box {

}

.goods-params .size-box .row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.goods-params .size-box .row view {
  flex: 1;
}

.goods-params .params-box {

}

.goods-params .params-box .row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.goods-params .params-box .row .title {
  flex: 1;
}

.goods-params .params-box .row .text {
  flex: 3;
  color: #ff5777;
}

.rate-box {
  padding: 20rpx 16rpx;
}

.rate-box .title {
  padding: 0 20rpx 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.rate-box .content {

}

.rate-box .content .user {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.rate-box .content .user .avatar-box {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
  overflow: hidden;
  margin-right: 10rpx;
}

.rate-box .content .user .avatar {
  width: 100%;
}

.rate-box .content .user .nickname {
  font-size: 28rpx;
}

.rate-box .content .rate-text {
  font-size: 24rpx;
  padding-bottom: 20rpx;
}

.rate-box .content .params {
  font-size: 24rpx;
}

.rate-box .content .params text {
  margin-right: 20rpx;
}

.recommend-box {

}

.recommend-box .title {
  padding: 20rpx 10rpx;
}

.recommend-box .content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.recommend-box .content .goods-item {
  position: relative;
  width: 48%;
  height: 340px;
  margin-top: 30rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  height: 90rpx;
  font-size: 24rpx;
  border-top: 1px solid #ccc;
  background-color: #fff;
}

.bottom-bar .left {
  flex: 1;
  display: flex;
}

.bottom-bar .left .left-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}

.bottom-bar .left .left-item .icon-box image {
  width: 36rpx;
  height: 36rpx;
}

.bottom-bar .left .left-item .title {

}

.bottom-bar .right {
  flex: 1;
  display: flex;
}

.bottom-bar .right .right-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.bottom-bar .right .right-item:first-child {
  background-color: orange;
}

.bottom-bar .right .right-item:last-child {
  background-color: #ff5777;
}

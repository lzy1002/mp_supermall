<view class="cart-item">
  <checkbox-group class="checkbox-box" bind:change="itemChackboxChange">
    <checkbox class="checkbox" checked="{{cartItemData.checked}}"></checkbox>
  </checkbox-group>
  <view class="image-box">
    <image src="{{cartItemData.image}}" mode="widthFix"></image>
  </view>
  <view class="content">
    <view class="title">{{cartItemData.title}}</view>
    <view class="desc">{{cartItemData.desc}}</view>
    <view class="info">
      <text class="price">ï¿¥{{cartItemData.lowNowPrice}}</text>
      <text class="num">x{{cartItemData.num}}</text>
    </view>
  </view>
</view>
